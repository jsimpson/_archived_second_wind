#paginator
  = paginate activities, :remote => true

%table.table.table-striped
  %thead
    %tr
      %th{rowspan: 2}
      %th{rowspan: 2} Started At
      %th{colspan: 2} Totals
      %th{colspan: 2} Timing
      %th{colspan: 3} Elevation
      %th{colspan: 2} Heart Rate
    %tr
      %th Distance
      %th Time
      %th Avg Speed
      %th Avg Pace
      %th Gain
      %th Loss
      %th Max
      %th Max
      %th Average
  %tbody#activities
    = render @activities
