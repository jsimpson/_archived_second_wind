.tab-content
  #map-tab.tab-pane.active
    #map-container
      #map
  #summary-charts-tab.tab-pane
    .col-lg-12
      %h2 Heart Rate
      = area_chart heart_rate_path, library: { vAxis: { title: 'Heart Rate (bpm)', titleTextStyle: { fontName: 'Helvetica' }}, colors: ['#990000']}
      %h2 Elevation
      = area_chart elevation_path, library: { vAxis: { title: 'Elevation (ft)', titleTextStyle: { fontName: 'Helvetica' }}, colors: ['#228400']}
      %h2 Speed
      = area_chart speed_path, library: { vAxis: { title: 'Speed (miles/hr)', titleTextStyle: { fontName: 'Helvetica' }}, colors: ['#0077e6']}

:javascript
  $(document).ready(function() {
    gmaps_draw_route(#{@polyline});

    $(document).on("click", "#map-nav-tab", function() {
      google.maps.event.trigger(map, "resize");
    });

    $(document).on("click", "#summary-charts-nav-tab", function() {
      var chartIds = ["#chart-1", "#chart-2", "#chart-3"];

      chartIds.forEach(function(id) {
        var height = $(id).height();
        var width = $(id).width();
        $(id).highcharts().setSize(width, height, doAnimation = false);
      });
    });
  });
