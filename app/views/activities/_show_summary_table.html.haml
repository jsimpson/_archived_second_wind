%table.table.table-striped
  %thead
    %tr
      %th{colspan: 3} Totals
      %th{colspan: 2} Speed
      %th{colspan: 2} Pace
      %th{colspan: 4} Elevation
      %th{colspan: 3} Heart Rate
    %tr
      %th Distance
      %th Time
      %th Calories
      %th Avg
      %th Max
      %th Avg
      %th Max
      %th Gain
      %th Loss
      %th Max
      %th Min
      %th Max
      %th Min
      %th Avg
  %tbody
    %tr
      %td= "#{number_with_precision(activity_presenter.total_distance, precision: 2)} miles"
      %td= activity_presenter.elapsed_time
      %td= "#{number_with_delimiter(@activity.total_calories)}"
      %td= "#{number_with_precision(activity_presenter.average_speed, precision: 2)} mph"
      %td= "#{number_with_precision(activity_presenter.max_speed, precision: 2)} mph"
      %td= "#{number_with_precision(activity_presenter.average_pace, precision: 2)} min/mile"
      %td= "#{number_with_precision(activity_presenter.max_pace, precision: 2)} min/mile"
      %td= "#{number_with_precision(activity_presenter.total_elevation_gain, precision: 2)} ft"
      %td= "#{number_with_precision(activity_presenter.total_elevation_loss, precision: 2)} ft"
      %td= "#{number_with_precision(activity_presenter.max_elevation, precision: 2)} ft"
      %td= "#{number_with_precision(activity_presenter.min_elevation, precision: 2)} ft"
      %td= "#{@activity.max_heart_rate} bpm"
      %td= "#{@activity.min_heart_rate} bpm"
      %td= "#{@activity.average_heart_rate} bpm"
